<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupMenuStyle">@style/dave</item>
        <item name="android:textAppearanceLargePopupMenu">@style/dave</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/dave</item>
    </style>

    <style name="dave" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#ff00ff</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:popupBackground">#ffff00</item>
    </style>



</resources>
